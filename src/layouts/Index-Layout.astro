---
// src/layouts/Index-Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- 你可以把你的 Favicon 链接放在这里 -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&family=Noto+Sans+SC:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      body {
        font-family: "Inter", "Noto Sans SC", sans-serif;
        background-color: #fdfbf7; /* 温暖的米白色背景 */
        color: #4a4a4a; /* 深灰色文字 */
        scroll-behavior: smooth; /* 开启全局平滑滚动 */
      }
    </style>
  </head>
  <body class="antialiased">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
