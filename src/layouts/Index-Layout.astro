---
// src/layouts/Index-Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- 你可以把你的 Favicon 链接放在这里 -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&family=Noto+Sans+SC:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      body {
        font-family: "Inter", "Noto Sans SC", sans-serif;
        background-color: #fdfbf7;
        color: #4a4a4a;
      }
      .section-title {
        font-family: "Noto Serif SC", serif;
        font-weight: 700;
        font-size: 2.5rem;
        line-height: 2.75rem;
        color: #382e2a;
      }
      .section-subtitle {
        font-size: 1.125rem;
        color: #7d6e66;
      }
      .brand-color {
        color: #8d6e63;
      }
      .brand-bg {
        background-color: #8d6e63;
      }
      .brand-bg-light {
        background-color: #efebe9;
      }
      .brand-border {
        border-color: #8d6e63;
      }
      .dropdown:hover .dropdown-menu {
        display: block;
      }
      .feature-card {
        background-color: #ffffff;
        border: 1px solid #f0e9e4;
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }
      .feature-card:hover {
        transform: translateY(-10px);
        box-shadow:
          0 20px 25px -5px rgb(0 0 0 / 0.08),
          0 8px 10px -6px rgb(0 0 0 / 0.08);
      }
    </style>
  </head>
  <body class="antialiased">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
