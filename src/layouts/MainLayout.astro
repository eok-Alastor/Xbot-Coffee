---
// src/layouts/Index-Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Partner from "../components/Partner.astro";
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Favicon 链接放在这里 -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Obubu" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- 字体 链接放在这里 -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Noto+Sans+SC:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="antialiased font-sans">
    <Header />
    <main>
      <slot />
    </main>
    <Partner />
    <Footer />
  </body>
</html>
