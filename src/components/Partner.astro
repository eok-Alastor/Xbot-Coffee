---
// src/components/PartnerSection.astro
const contactEmail = "partner@obubu.tech"; // 联系邮箱
const surveyLink =
  "https://bcnd2iyqshzb.feishu.cn/share/base/form/shrcnax6QIk4qbuvze2F7ivNuCc"; // 第三方问卷链接
---

<section id="partner" class="py-20 bg-gray-800 text-white">
  <div class="container mx-auto px-6">
    <div class="lg:flex items-center justify-between gap-16">
      <!-- 左侧：标题和描述 (保持不变) -->
      <div class="lg:w-1/2 text-center lg:text-left">
        <h2 class="text-4xl font-bold mb-4">成为我们的合伙人</h2>
        <p class="text-gray-300 text-lg mb-8 max-w-xl mx-auto lg:mx-0">
          我们为场地提供方和城市合伙人提供清晰、高回报的合作路径。立即联系我们，开启您的智能咖啡事业。
        </p>
      </div>

      <!-- 右侧：联系卡片 -->
      <div class="lg:w-1/2 max-w-md mx-auto mt-10 lg:mt-0">
        <div
          id="contact-card"
          class="bg-white rounded-lg shadow-xl p-8 text-gray-800"
        >
          <h3 class="text-2xl font-bold mb-6 text-center text-brand-brown-dark">
            即刻洽谈，共创未来
          </h3>

          <!-- 邮箱联系方式 (保持不变) -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2"
              >合作咨询邮箱</label
            >
            <div
              class="flex items-center justify-between p-3 bg-gray-100 rounded-md"
            >
              <span id="email-address" class="font-mono text-gray-600"
                >{contactEmail}</span
              >
              <button
                id="copy-button"
                title="复制邮箱地址"
                class="px-3 py-1 text-xs font-semibold text-gray-500 bg-gray-200 rounded hover:bg-gray-300 transition-colors"
              >
                复制
              </button>
            </div>
            <p
              id="copy-feedback"
              class="text-xs text-green-600 mt-2 h-4 transition-opacity opacity-0"
            >
            </p>
          </div>

          <!-- 主要操作按钮：一键发送邮件 (保持不变) -->
          <a
            href={`mailto:${contactEmail}?subject=关于 obubu xbot 合作咨询`}
            class="block w-full text-center bg-brand-brown text-white font-bold py-3 px-6 rounded-md hover:opacity-90 transition"
          >
            发送邮件
          </a>

          <!-- 分隔线 -->
          <div class="my-4 flex items-center">
            <span class="flex-grow border-t border-gray-200"></span>
            <span class="mx-4 text-xs text-gray-400">或</span>
            <span class="flex-grow border-t border-gray-200"></span>
          </div>

          <!-- 次要操作按钮：跳转到第三方问卷 -->
          <a
            href={surveyLink}
            target="_blank"
            rel="noopener noreferrer"
            class="block w-full text-center bg-brand-brown text-white font-bold py-3 px-6 rounded-md hover:opacity-90 transition"
          >
            在线填写合作问卷
          </a>

          <div class="my-4 flex items-center">
            <span class="flex-grow border-t border-gray-200"></span>
            <span class="mx-4 text-xs text-gray-400">或</span>
            <span class="flex-grow border-t border-gray-200"></span>
          </div>

          <!-- (可选) 其他联系方式 (保持不变) -->
          <div class="mt-6 text-center text-sm text-gray-500">
            <p>
              致电: <span class="font-semibold text-gray-700">18602059290</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- 复制邮箱的脚本 (保持不变) -->
<script>
  const copyButton = document.getElementById("copy-button");
  const emailAddress = document.getElementById("email-address");
  const copyFeedback = document.getElementById("copy-feedback");

  if (copyButton && emailAddress && copyFeedback) {
    copyButton.addEventListener("click", () => {
      navigator.clipboard
        .writeText(emailAddress.textContent || "")
        .then(() => {
          copyFeedback.textContent = "已复制到剪贴板！";
          copyFeedback.classList.remove("opacity-0");
          setTimeout(() => {
            copyFeedback.classList.add("opacity-0");
          }, 2000);
        })
        .catch((err) => {
          copyFeedback.textContent = "复制失败，请手动复制。";
          copyFeedback.classList.remove("opacity-0", "text-green-600");
          copyFeedback.classList.add("text-red-600");
        });
    });
  }
</script>
