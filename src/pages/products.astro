---
import ProductsLayout from '../layouts/Products-Layout.astro';
// 注意：我们这里不再需要 Product-Card.astro，因为样式更简单，直接写在页面里
// 如果卡片逻辑复杂，可以创建一个新的 AppleStyleCard.astro 组件

// 导入你的产品图片
import xbotS_Img from '../assets/xbot-products/Xbot-S.png'; 
// ... 导入其他产品图片 ...

// 定义产品数据
const mainProducts = [
  { name: 'Xbot-S', imageSrc: xbotS_Img.src, link: '/products/xbot-s' },
  // 假设还有其他产品...
  // { name: 'Xbot-P', imageSrc: xbotP_Img.src, link: '/products/xbot-p' },
  // { name: '咖啡豆', imageSrc: coffeeBean_Img.src, link: '/products/beans' },
];
---

<ProductsLayout title="商店">
  <div class="container mx-auto px-6 py-16 md:py-24">
    
    <!-- 1. 标题区 -->
    <div class="text-center mb-16 md:mb-20">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-black leading-tight tracking-tighter">
        <span class="text-neutral-600">这个商店，产品都称心，</span><br>体验更如意。
      </h1>
    </div>

    <!-- 2. 商品网格布局 -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-x-4 gap-y-8 md:gap-x-6 md:gap-y-12">
      {mainProducts.map(product => (
        <a href={product.link} class="flex flex-col items-center text-center group">
          <div class="w-full aspect-square bg-white rounded-xl flex items-center justify-center p-4 transition-transform group-hover:scale-105">
            <img 
              src={product.imageSrc} 
              alt={product.name} 
              class="max-h-full max-w-full object-contain"
            />
          </div>
          <span class="mt-4 text-sm font-semibold text-black">
            {product.name}
          </span>
        </a>
      ))}
    </div>

    <!-- 3. 最新上架区块 -->
    <div class="mt-24 md:mt-32 border-t border-neutral-200 pt-16 md:pt-24">
      <h2 class="text-3xl sm:text-4xl font-bold text-black text-center tracking-tighter mb-12">
        最新上架。<span class="text-neutral-600">不容错过。</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- 示例大卡片 -->
        <div class="bg-white rounded-2xl p-8 text-left aspect-video flex flex-col justify-between">
          <div>
            <p class="font-semibold text-orange-500">限时优惠</p>
            <h3 class="text-2xl font-bold mt-2">Xbot 全系列</h3>
            <p class="mt-2 text-neutral-600">以旧换新，享最高补贴。</p>
          </div>
          <a href="#" class="text-blue-600 font-semibold text-sm self-start">进一步了解 →</a>
        </div>
        <!-- ... 更多大卡片 ... -->
      </div>
    </div>

  </div>
</ProductsLayout>