---
import MainLayout from "../layouts/MainLayout.astro";
import Product from "../components/Product.astro";
import CoffeeBean from "../assets/coffee-bean.png";
import Bag from "../assets/goods/bag.png";
import TShirt from "../assets/goods/logoTshirt.png";
import Cup from "../assets/goods/markcup.png";
import Teapot from "../assets/goods/teapot.png";

// 导入产品图片

const merchandise = [
  {
    name: "obubu经典马克杯",
    image: Cup.src,
  },
  {
    name: "品牌Logo T恤",
    image: TShirt.src,
  },
  {
    name: "手冲分享壶",
    image: Teapot.src,
  },
  {
    name: "帆布环保袋",
    image: Bag.src,
  },
];
---

<MainLayout title="我的产品">
  <Product />

  <!-- 这部分内容来自 Vue 原型的 Products 页面 -->
  <section id="drip-coffee" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="section-title">精品挂耳咖啡</h2>
        <p class="section-subtitle mt-4">
          随时随地，享受一杯大师级的现冲风味。
        </p>
      </div>
      <div class="lg:flex items-center gap-12 feature-card p-8 rounded-lg">
        <div class="lg:w-1/2">
          <img
            src={CoffeeBean.src}
            alt="精品挂耳咖啡"
            class="rounded-lg shadow-lg w-full"
          />
        </div>
        <div class="lg:w-1/2 mt-8 lg:mt-0">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">obubu 精选系列</h3>
          <p class="text-gray-600 mb-6">
            我们遍寻全球著名产区，为您带来风味各异的精品挂耳咖啡...
          </p>
          <ul class="space-y-2 text-gray-700">
            <li>- 耶加雪菲：柑橘与花香的明亮协奏</li>
            <li>- 曼特宁：浓郁醇厚的可可与香料气息</li>
            <li>- 云南小粒：坚果与红糖的甜感交织</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section id="merchandise" class="py-20 bg-brand-bg-light">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="section-title">Obubu 周边文创</h2>
        <p class="section-subtitle mt-4">将咖啡美学融入您的日常生活。</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          merchandise.map((item) => (
            <div class="text-center feature-card p-4 rounded-lg">
              <img
                src={item.image}
                alt={item.name}
                class="w-full h-48 object-cover rounded-md mb-4 bg-white"
              />
              <h4 class="font-semibold text-lg text-gray-800">{item.name}</h4>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
